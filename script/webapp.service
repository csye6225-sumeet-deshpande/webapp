[Unit]
Description=Webapp - Running the webapp on start
Documentation=https://github.com/csye6225-sumeet-deshpande/webapp
After=network.target

[Service]
WorkingDirectory=/home/admin/webapp/
Type=simple
User=sumeet
Group=webappgroup
ExecStart=/usr/bin/node /home/admin/webapp/index.js
EnvironmentFile=/home/admin/webapp/.env
Restart=always

[Install]
WantedBy=cloud-init.target